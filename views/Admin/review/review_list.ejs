<%-include('../common/header');-%>
<%-include('../common/sidebar');-%>

 <div class="main-content">
      <section class="section">
        <div class="section-header">
          <h1> Review </h1>
          <div class="section-header-breadcrumb">
            <!-- <a href="/add_review" class="btn btn-sm " style="background-color: #07a3c0;" ><i class="fa fa-plus"> Post Review</i></a> -->
            </div>
        </div>
        <div class="section-body">
          <div class="col-12 col-md-6 col-lg-12">
            <div class="table-responsive">
              <table id="myTable" class="table table-hover table-md">
                <thead>
                    <tr style="background-color: #ebf2f2;" >
                        <th scope="col">S No.</th>
                        <th scope="col">User Name</th>
                        <th scope="col">Worker Name</th>
                        <th scope="col">Rating</th>
                        <th scope="col">Comment</th>
                        <th scope="col">Action</th>
                      </tr>
                </thead>
                <tbody>

                  <% if(reviewdata.length != 0){%>
                    <% reviewdata.forEach(function(data,i) { %>
                        <tr>
                            <td><%=1+i%></td>
                            <td><%=data.userId ? data.userId.firstname : "" %></td>
                            <td><%=data.workerId ? data.userId.firstname : "" %></td>
                            <td><%=data.rating%></td>
                            <td><%=data.comment%></td>
                            <td>
                              <a href="/view_review/<%=data._id%>" class="btn btn-sm bg-info"><i class="fa fa-eye" aria-hidden="true"></i></a>
                              <button onclick="confirmDelete('<%=data._id%>')" class="btn btn-sm bg-danger"> <i class="fa fa-trash"></i> </button>
                            </td>
                        </tr>
                    <%})%>
                <%}%>
                 </tbody>
              </table>
            </div>
          </div>
        </div>
      </section>
    </div>

<%- include('../common/footer'); -%>

