<%- include('../common/header'); -%>
<%- include('../common/sidebar'); -%>

<div class="main-content">
    <section class="section">
        <div class="section-header">
            <h1>Job details</h1>
        </div>
        <div class="section-body">
            <div class="card">
                <form action="/faq_list" method="get" enctype="multipart/form-data">
                    <div class="row mt-sm-4 justify-content-center ">
                        <div class="col-12 col-md-12 col-lg-12 offset-lg-0 ">
                            <div class="card-body">
                                <div class="form-group col-12">
                                    <label> Question</label>
                                    <input type="text" class="form-control" value="<%=faqData.question%>" disabled>
                                </div>
                                <div class="form-group col-12">
                                    <label>Answer</label>
                                    <textarea class="form-control"  name="answer"  value="" data-height="100" disabled><%=faqData.answer%></textarea> <br>
                                    <button type="submit" class="btn btn-primary">Back <i class="icon-arrow-right14 position-right"></i></button> 
                                  </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>

<%- include('../common/footer'); -%>

<script>
  imgInp.onchange = evt => {
    const [file] = imgInp.files
    if (file) {
      blah.src = URL.createObjectURL(file)
    }
  }
</script>