<%-include('../common/header');-%>
<%-include('../common/sidebar');-%>

<div class="main-content">
  <section class="section">
    <div class="section-header">
      <h1> Message List</h1>
    </div>
    <div class="section-body">
      <div class="col-12 col-md-6 col-lg-12">
        <div class="table-responsive">
          <table id="myTable" class="table table-hover table-md">
            <thead>
              <tr style="background-color: #ebf2f2;" >
                <th scope="col">S No.</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Message</th>
                <th scope="col">Date</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <%messagedata.forEach(function(data,i)  { %>
                <tr>
                  <td> <%=1+i%></td>
                    <td> <%=data.name%></td>
                    <td> <%=data.email%></td>
                    <td><%= data.message.length > 20 ? data.message.substring(0, 20) + "..." : data.message %></td>
                    <td> <%= data.date.toLocaleDateString('en-US', { day: 'numeric', month: 'short', year: 'numeric' }) %></td>

                    <td>
                    <a href="/view_message/<%=data._id%>" class="btn btn-sm bg-info"><i class="fa fa-eye" aria-hidden="true"></i></a>
                    <button onclick="confirmDelete('<%=data._id%>')" class="btn btn-sm bg-danger"> <i class="fa fa-trash"></i> </button>
                    </td>
                </tr>
              <%} )%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>
</div>

<%- include('../common/footer'); -%>

<script>
  $(document).ready(function () {
    $('#myTable').DataTable();
  });
</script>

<script>
