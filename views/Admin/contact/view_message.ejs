<%-include('../common/header');-%>
<%-include('../common/sidebar');-%>

<div class="main-content">
  <section class="section">
    <div class="section-header">
      <h1>Message</h1>
    </div>
    <div class="container mt-3">
      <div class="row">
        <div class="card-body">
          <form method="get" action="/contact_list">
            <div class="form-group floating-addon">
              <label>Name</label>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <div class="input-group-text">
                      <i class="far fa-user"></i>
                    </div>
                  </div>
                  <input id="name" type="text" class="form-control" name="name" value="<%=messagesdata.name%>" disabled>
                </div>
            </div>
            <div class="form-group floating-addon">
              <label>Email</label>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <div class="input-group-text">
                      <i class="fas fa-envelope"></i>
                    </div>
                  </div>
                  <input id="email" type="email" class="form-control" name="email" value="<%=messagesdata.email%>" disabled>
                </div>
            </div>
            <div class="form-group floating-addon">
              <label>Date</label>
              <div class="input-group">
                <div class="input-group-prepend">
                  <div class="input-group-text">
                    <i class="fas fa-table"></i>
                  </div>
                </div>
                <input id="date" class="form-control" name="date" value="<%= messagesdata.date.toLocaleDateString('en-US', { day: 'numeric', month: 'short', year: 'numeric' }) %>" disabled>
              </div>
            </div>
            <div class="form-group">
              <label>Message</label>
              <textarea class="form-control"  name="message"  value="" data-height="100" disabled><%=messagesdata.message%></textarea> <br>
              <button type="submit" class="btn btn-primary">Back <i class="icon-arrow-right14 position-right"></i></button> 
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</div>
<%- include('../common/footer'); -%>