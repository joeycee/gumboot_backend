            required: true,
            maxlength: 15
          },
          estmdtime: {
            noSpace: true,
            required: true,
            maxlength: 10
          },
          expdate: {
            noSpace: true,
            required: true,
            maxlength: 15
          },
          description: {
            noSpace: true,
            required: true,
            maxlength: 15
          },
          address: {
            noSpace: true,
            required: true,
            maxlength: 30
          },
          description: {
            noSpace: true,
            required: true,
            maxlength: 50
          },
          price: {
            noSpace: true,
            required: true,
            maxlength: 50
          },
        },
        messages: {

          name: {
            required: "This field is required.",
            noSpace: "Space not allowed",
            maxlength: "Name should be 20 charcater"
          },
          jobtype: {
            required: "This field is required.",
