          },
          address: {
            required: "This field is required.",
            noSpace: "Space not allowed",
            maxlength: "Text should be 15 charcater"
          },
          description: {
            required: "This field is required.",
            noSpace: "Space not allowed",
            maxlength: "Text should be 50 charcater"
          },
         
        },
        submitHandler: function(form) {
          form.submit();
        }
      }));
  });
</script>
